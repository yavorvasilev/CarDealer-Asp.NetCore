@model IEnumerable<SaleListModel>
@{
    ViewData["Title"] = "All sales";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Discount
            </th>
            <th>
                Price
            </th>
            <th>
                Discounted Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
        <tr>
            <td>
                @sale.CustomerName
            </td>
            <td>
                @((sale.Discount + (sale.IsYoungDriver ? 0.05 : 0)).ToString("F2"))%
            </td>
            <td>
                @sale.Price.ToString("F2")
            </td>
            <td>
                @sale.DiscountedPrice.ToString("F2")
            </td>
            <td class="text-center">
				<a class ="btn btn-sm btn-default" href="/sales/@sale.Id">More Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>

